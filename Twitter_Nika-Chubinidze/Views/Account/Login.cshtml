@using Twitter_Nika_Chubinidze.Models
@model RegisterAndLoginViewModel

@{
    Layout = null;
    ViewBag.Title = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="~/Content/img/Twitter_bird_icon.png">
    <title>Login Register</title> 
    <link href="~/Content/bootstrap-3.3.5/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/assets/css/animate.min.css" rel="stylesheet">
    <link href="~/Content/font-awesome-4.4.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/assets/css/timeline.css" rel="stylesheet">
    <script src="~/Content/assets/js/jquery.1.11.1.min.js"></script>
    <script src="~/Content/bootstrap-3.3.5/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/custom.js"></script> 
</head>  
<body class="welcome-page animated fadeIn"> 
    <div class="row row-welcome">
        <div class="login-page">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <img src="~/Content/img/Twitter_bird_icon.png" height="300" width="300">
                    <h1>Twitter </h1>
                    @{
                        var hidden = "frm hidden";
                        var fade = "frm  animated fadeInRight";
                        var temp="";

                        if (Model != null && Model.Register != null)
                        { 
                                temp = hidden;
                                hidden = fade;
                                fade = temp; 
                        }

                        using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = fade, role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-content">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Login.Email, new { @class = "form-control input-underline input-lg", @placeholder = "Email" })
                                    @Html.ValidationMessageFor(m => m.Login.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Login.Password, new { @class = "form-control input-underline input-lg", @placeholder = "Password" })
                                    @Html.ValidationMessageFor(m => m.Login.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <div class="checkbox" style="padding-left:340px">
                                            @Html.CheckBoxFor(m => m.Login.RememberMe)
                                            @Html.LabelFor(m => m.Login.RememberMe)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <input type="submit" value="Log in" class="btn btn-info btn-lg" />
                            <a href="#" class="btn btn-info btn-lg btn-frm">Register</a>
                        }

                         using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = hidden, role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-content">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Register.Email, new { @class = "form-control input-underline input-lg", @placeholder = "Email" })
                                    @Html.ValidationMessageFor(m => m.Register.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Register.Password, new { @class = "form-control input-underline input-lg", @placeholder = "Password" })
                                    @Html.ValidationMessageFor(m => m.Register.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Register.ConfirmPassword, new { @class = "form-control input-underline input-lg", @placeholder = "Confirm Password" })
                                    @Html.ValidationMessageFor(m => m.Register.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Register.FirstName, new { @class = "form-control input-underline input-lg", @placeholder = "First Name" })
                                    @Html.ValidationMessageFor(m => m.Register.FirstName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Register.LastName, new { @class = "form-control input-underline input-lg", @placeholder = "Last Name" })
                                    @Html.ValidationMessageFor(m => m.Register.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <a href="#" class="btn btn-info btn-lg btn-frm">Log in</a>
                            <input type="submit" class="btn btn-info btn-lg" value="Register" />
                        }
                    }
                </div> 
            </div> 
            <br /><br /><br />
            <div class="row">
                <div class="container">
                    <p> 
                        Copyright Nick-Twitter Company - All rights reserved
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
} 
 

